{
    "name": "hadefication/polyglot",
    "description": "Extend Laravel Translation to JavaScript.",
    "license": "MIT",
    "authors": [
        {
            "name": "Glen Gringgo Bangkila",
            "email": "hadefication@gmail.com"
        }
    ],
    "require": {
        "illuminate/translation": "^5.4",
        "illuminate/support": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "orchestra/testbench": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Hadefication\\Polyglot\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Hadefication\\Polyglot\\PolyglotServiceProvider"
            ]
        }
    }
}
